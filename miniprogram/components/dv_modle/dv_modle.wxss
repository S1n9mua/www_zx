.infolist{
  height: 220rpx;
  width: 100%;
  border-bottom: 1px solid #e4e4e4;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}


.infolist .info-group{
  float: right;
  width: 470rpx;
}
.infolist .info-group .infomation{
  margin-top: 15rpx;
  font-size: 30rpx;
  color: gray;
}

.infolist .info-group .more-info{
  float: right;
  font-size:25rpx; 
  /*color: gainsboro;*/
}

.infolist .thumbnail-group{
  width: 200rpx;
  height: 140rpx;
  float: left;
}

.thumbnail-group .thumbnail{
  width: 100%;
  height: 100%;
}